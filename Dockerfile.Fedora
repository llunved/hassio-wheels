ARG BUILD_FROM
FROM ${BUILD_FROM}

ARG BUILD_ARCH
ENV ARCH=${BUILD_ARCH}

# Install requirements
RUN dnf -y upgrade && \
    dnf install -y \
        rsync \
        openssh-clients \
        python3-pip && \
        python3-click && \
	python3-Cython && \
	python3-request && \	
    yum clean all -y

COPY requirements.txt /usr/src/

RUN    pip3 install --no-cache-dir  \
        -r /usr/src/requirements.txt && \
    rm -f /usr/src/requirements.txt  

# Install builder
COPY . /usr/src/builder/
RUN pip3 -v install --no-cache-dir \
        /usr/src/builder \
    && rm -fr /usr/src/builder

WORKDIR /data
ENTRYPOINT [ "python3", "-m", "builder" ]
